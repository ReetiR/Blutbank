extends sidebar
block main-body
    .row
        .col-md-12.col-sm-12
            .ibox-title
                h5 Add User
            .ibox-content
                .alert.alert-dismissible(style='display: none;')
                form(method='post', role='form')
                    .row
                        .col-md-12
                            .form-group
                                label Name
                                input#name.form-control(type='text', placeholder='Name', name='name', value="")
                    hr
                    .row
                        .col-md-4
                            .form-group
                                label Email
                                input#email.form-control(type='email', placeholder='example@example.com', name='email', value="")
                    hr
                    button.btn.btn-block.btn-primary(type='button', onclick="return add()")
                        i.fa.fa-plus
