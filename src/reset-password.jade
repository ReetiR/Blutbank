extends layout
block content
    body.gray-bg(cz-shortcut-listen='true')
        .passwordBox.animated.fadeInDown
          .row
            .col-md-12
              .ibox-content
                h2.font-bold Forgot password
                p
                  | Enter your email address and your password will be reset and emailed to you.
                .row
                  .col-lg-12
                    form.m-t(role='form')
                        .alert.alert-dismissible(style='display: none;')
                        .form-group
                        input#email.form-control(type='email', placeholder='Email address', required='')
                .row
                    .col-lg-12
                        button.btn.btn-primary.block.full-width.m-b(type='button', onclick='reset()') Send new password
          hr
          .row
