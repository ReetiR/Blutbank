extends sidebar
block main-body
    .row
        .col-md-12.col-sm-12
            .ibox-title
                h5 Change Password
            .ibox-content
                .alert.alert-dismissible(style='display: none;')
                form(method='post', role='form')
                    .row
                        .col-md-12
                            .form-group
                                label Old Password
                                input#oldPassword.form-control(type='password', placeholder='Old Password', name='oldPassword', value="")
                    hr
                    .row
                        .col-md-12
                            .form-group
                                label New Password
                                input#newPassword.form-control(type='password', placeholder='New Password', name='newPassword', value="")
                    .row
                        .col-md-12
                            .form-group
                                label Confirm New Password
                                input#confirmPassword.form-control(type='password', placeholder='Confirm New Password', name='confirmPassword', value="")
                    hr
                    button.btn.btn-block.btn-primary(type='button', onclick="return change()")
                        i.fa.fa-plus
